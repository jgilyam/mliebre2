<!DOCTYPE html>
<html lang="es">
  <!-- Include Head -->
  <%- include('partials/head', {title: 'Inicio'}) %>
  <body>
    <!-- Header -->
    <%- include('partials/headerNavbar') %>
    <!-- /Header -->

    <!-- Banner -->
    <div class="banner"></div>
    <!-- /Banner -->

    <!-- ultima visita -->
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Basado en tu Ãºltima visita</h2>
        </div>
        <!-- Show the "visited" products -->
        <% for( let index = 0; index < productsVisited.length; index++ ) { %>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/products/detail/<%= productsVisited[index].id %> ">
              <figure class="product-box_image">
                <img
                  src="/images/products/<%= productsVisited[index].image %>"
                  alt="imagen de producto"
                />
              </figure>
              <article class="product-box_data">
                <h2>
                  <%= toThousand(productsVisited[index].price * (1-
                  productsVisited[index].discount /100))%>
                </h2>
                <span><%= productsVisited[index].discount %> % OFF</span>
                <p><%= productsVisited[index].name %></p>
                <i class="fas fa-truck"></i>
              </article>
            </a>
          </section>
        </div>
        <% } %>
      </div>
    </div>
    <!-- /ultima visita -->

    <!-- Ofertas -->
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Ofertas</h2>
        </div>
        <!-- Show the "in-sale" products -->
        <% for( let index = 0; index < productsInSale.length; index++ ) { %>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/products/detail/<%= productsInSale[index].id %> ">
              <figure class="product-box_image">
                <img
                  src="/images/products/<%= productsInSale[index].image %>"
                  alt="imagen de producto"
                />
              </figure>
              <article class="product-box_data">
                <h2>
                  <%= toThousand(productsInSale[index].price * (1-
                  productsInSale[index].discount /100)) %>
                </h2>
                <span><%= productsInSale[index].discount %> % OFF</span>
                <p><%= productsInSale[index].name %></p>
                <i class="fas fa-truck"></i>
              </article>
            </a>
          </section>
        </div>
        <% } %>
      </div>
    </div>
    <!-- /Ofertas -->

    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- /footer -->
  </body>
</html>
